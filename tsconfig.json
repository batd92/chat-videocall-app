{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "@app/*": ["src/app/*"],
            "@core/*": ["src/core/*"],
            "@socket/*": ["src/gateway/*"]
        },
        "incremental": true
    }
}